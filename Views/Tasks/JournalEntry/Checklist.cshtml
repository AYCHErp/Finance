@model long

@{
    ViewBag.Title = "Checklist";
    Layout = ViewBag.FinanceLayoutPath;
}
<style>
iframe{
	display: block;
	margin-top:1em;
	width: 800px;
	height: 800px;
	border:1px solid #ccc;
}    
</style>
<script src="/Scripts/frapid/utilities/form.js"></script>
<div class="ui attached page segment" style="min-height: 100%; padding: 3em;">
    <div class="ui huge header">Journal Entry</div>
    <div class="ui divider"></div>

    <div class="ui positive message">The transaction was posted successfully.</div>

    <a href="/dashboard/finance/tasks/journal/entry" class="ui green button">
        View Transactions
    </a>
    <a href="/dashboard/finance/tasks/journal/entry/new" class="ui red button">
        Add a New Transaction
